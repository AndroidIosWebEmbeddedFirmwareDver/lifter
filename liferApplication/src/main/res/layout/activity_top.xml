<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_top_height"
    android:background="@color/activity_top_bg"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/btn_top_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/selector_trans_2a2a2a"
        android:onClick="onClick"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:src="@drawable/selector_resource_of_back_icon"
        android:text="@string/button_hint_of_back"
        android:textColor="@color/selector_ffffff_959595"
        tools:ignore="ButtonStyle,ContentDescription" />

    <View
        android:layout_width="@dimen/activity_view_height_min"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/activity_view_margin_max"
        android:layout_marginRight="@dimen/activity_view_margin_min"
        android:layout_marginTop="@dimen/activity_view_margin_max"
        android:background="@color/activity_text_2a2a2a"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <TextView
        android:id="@+id/text_top_middle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:text="@string/empty"
        android:textColor="@color/activity_text_ffffff"
        android:textSize="@dimen/activity_view_textsize_max"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/btn_top_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/selector_trans_2a2a2a"
        android:onClick="onClick"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:src="@drawable/icon_wode"
        android:text="@string/button_hint_of_back"
        android:visibility="gone"
        android:textColor="@color/selector_ffffff_959595"
        tools:ignore="ButtonStyle,ContentDescription" />

</LinearLayout>